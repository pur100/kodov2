<h1 class="text-center text-danger">Add speaker to your event</h1>


<div class="form-container">
  <%= simple_form_for [ @event, @speaker ] do |f| %>
  <%= f.error_notification %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :job_title %>
  <%= f.input :avatar, as: :file %>
  <%= f.input :specialty %>
  <%= f.input :establishments, type: "textarea" %>


  <%= f.button :submit, class: "btn-primary" %>
   <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>


</div>
